                                        <select class="glass-effect" style="width: 100px;">
                                            <option value="px">px</option>
                                            <option value="vm">vm</option>
                                            <option value="%">%</option>
                                        </select>
                                        <div class="label-hide">Expand height
                                            <input type="number" class="glass-effect-hide" value="640"
